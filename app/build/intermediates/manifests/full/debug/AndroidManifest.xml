<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sk.kasala.viliam.bakalarka"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="7" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BIND_INPUT_METHOD" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="bp.iemanager.IEManagerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="bp.iemanager.exporter.ExporterActivity"
            android:label="Exporter"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="bp.iemanager.importer.ImporterActivity"
            android:label="Importer"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="bp.iemanager.importer.SynchronizerActivity"
            android:label="Synchronizer"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>